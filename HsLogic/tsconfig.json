{
  "compilerOptions": {
    "module": "amd",
    "target": "es6",
    "sourceMap": false,
    "declaration": true,
    "removeComments": true,
    "outFile": "dist/HsLogic.js",
    "outDir": "dist",
      // "sourceRoot": "../src",
  
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noResolve": false, //?
    "preserveConstEnums": false
  },
  "exclude": [
    "src.old/**/*",
    "dist/**/*",
    "node_modules/**/*"
  ],
  "include": [
    "src/**/*"
  ]
  // "compileOnSave": true
}